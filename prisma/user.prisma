model User {
  id                 Int       @id @default(autoincrement())
  firstName          String
  lastName           String
  fullName           String
  userName           String
  imgUrl             String?
  authMethod         AuthMethod @default(email)
  countryCode        String
  ISOCode            String
  phone              String
  email              String    @unique
  activationCode     String?
  password           String
  isEmailVerified    Boolean   @default(false)
  isPhoneVerified    Boolean   @default(false)
  isProfileCompleted Boolean   @default(false)
  status             Status    @default(pending)
  googleId           String?
  facebookId         String?
  appleId            String?
  githubId           String?
  twitterId          String?
  lastAccess         DateTime? @default(now())
  
  @@map("users")
}

enum AuthMethod {
  email
  facebook
  google
  apple
  github
  twitter
 
}

enum Status {
  active
  deleted
  inActive
  pending
}
